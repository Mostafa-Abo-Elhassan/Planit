@model PlaniT.Models.RegisterViewModel

@{
    Layout = "_Account"; // ده اللي فيه Tailwind
    ViewBag.Title = "Register";
}



<div class="container">


    <section class="bg-white dark:bg-gray-900">
        <div class="container flex items-center justify-center min-h-screen px-6 mx-auto">
            <form asp-controller="Account" asp-action="Register" method="post" class="w-full max-w-md bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md">

                <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>


                <div class="flex items-center justify-center mt-6">

                    <span class="w-1/3 pb-4 font-medium text-center text-gray-800 capitalize border-b-2 border-blue-500 dark:border-blue-400 dark:text-white">
                        Sign Up
                    </span>
                </div>



                <div class="mt-8">
                    <label asp-for="JobTitle" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                    <input asp-for="JobTitle"
                           class="block w-full px-4 py-3 text-gray-700 bg-white border rounded-lg dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
                </div>
                <!-- Username -->
                <div class="mt-8">
                    <label asp-for="UserName" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                    <input asp-for="UserName"
                           class="block w-full px-4 py-3 text-gray-700 bg-white border rounded-lg dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300" placeholder="JobTitle" />
                    <span asp-validation-for="JobTitle" class="text-red-500 text-sm"></span>
                </div>

                <!-- Email -->
                <div class="mt-4">
                    <label asp-for="Email" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                    <input asp-for="Email"
                           class="block w-full px-4 py-3 text-gray-700 bg-white border rounded-lg dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- Password -->
                <div class="mt-4">
                    <label asp-for="Password" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                    <input asp-for="Password"
                           class="block w-full px-4 py-3 text-gray-700 bg-white border rounded-lg dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>


                <div class="mt-6">
                    <button type="submit"
                            class="w-full px-6 py-3 text-sm font-medium tracking-wide text-white bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                        Sign Up
                    </button>
                </div>

                <div class="mt-6 text-center">
                    <a asp-action="Login" asp-controller="Account" class="text-sm text-blue-500 hover:underline dark:text-blue-400">
                        Already have an account?
                    </a>
                    <a asp-action="Index" asp-controller="Home" class="text-sm text-blue-500 hover:underline dark:text-blue-400">
                        Home
                    </a>
                </div>
            </form>
        </div>
    </section>


</div>
