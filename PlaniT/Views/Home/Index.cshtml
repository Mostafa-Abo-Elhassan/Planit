@model PlaniT.Models.PlannerViewModel
@{
    ViewData["Title"] = "Daily Planner";
    Layout = "_Layout";
}

<div class="w-full max-w-7xl mx-auto bg-gradient-to-br from-indigo-50 via-white to-purple-50 rounded-2xl shadow-2xl overflow-hidden">
    <!-- Welcome Banner -->
    <div class="relative overflow-hidden bg-gradient-to-r from-primary via-secondary to-purple-600 text-white">
        <div class="absolute inset-0 bg-black/10"></div>
        <div class="relative px-8 py-8">
            <div class="text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-2 bg-clip-text text-transparent bg-gradient-to-r from-white to-purple-200">
                    ✨ Your Beautiful Day Awaits
                </h2>
                <p class="text-lg text-purple-100">
                    Transform your plans into achievements
                </p>
            </div>
        </div>
        <!-- Decorative elements -->
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
            <div class="absolute -top-20 -right-20 w-40 h-40 bg-white/10 rounded-full blur-2xl animate-pulse"></div>
            <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-purple-300/20 rounded-full blur-2xl animate-pulse delay-1000"></div>
        </div>
    </div>

    <div class="px-8 py-6 space-y-10">
        <!-- Section 1: Today's Template -->
        <section id="today-template-section" class="group">
            <div class="relative">
                <!-- Section Header -->
                <div class="flex items-center mb-8">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-gradient-to-r from-primary to-secondary rounded-lg flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-4">
                        <h2 class="text-2xl font-bold text-gray-800">Today's Focus</h2>
                        <p class="text-gray-600 mt-1">Your template for today's success</p>
                    </div>
                </div>

                <!-- Content Container -->
                <div class="relative bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-white/30 overflow-hidden group-hover:shadow-xl transition-all duration-300">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-50/30 to-purple-50/30"></div>
                    <div class="relative p-6">
                        <partial name="_TodayTemplate" model="Model.TodayTemplateItems" />
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 2: ToDo For Next Days -->
        <section id="day-cards-section" class="group">
            <div class="relative">
                <!-- Section Header -->
                <div class="flex items-center mb-8">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-lg flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-4">
                        <h2 class="text-2xl font-bold text-gray-800">Upcoming Days</h2>
                        <p class="text-gray-600 mt-1">Plan ahead and stay organized</p>
                    </div>
                </div>

                <!-- Scrollable Cards Container -->
                <div class="relative">
                    <!-- Gradient overlays for scroll indication -->
                    <div class="absolute left-0 top-0 bottom-0 w-8 bg-gradient-to-r from-indigo-50 to-transparent z-10 pointer-events-none"></div>
                    <div class="absolute right-0 top-0 bottom-0 w-8 bg-gradient-to-l from-purple-50 to-transparent z-10 pointer-events-none"></div>

                    <div class="flex gap-6 overflow-x-auto snap-x snap-mandatory scroll-smooth p-2 scrollbar-hide hover:scrollbar-default transition-all duration-300">
                        <partial name="_DayCards" model="Model.DayCards" />
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 3: Future Vision -->
        <section id="future-vision-section" class="group">
            <div class="relative">
                <!-- Section Header -->
                <div class="flex items-center mb-8">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-gradient-to-r from-accent to-orange-500 rounded-lg flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-4">
                        <h2 class="text-2xl font-bold text-gray-800">Future Vision</h2>
                        <p class="text-gray-600 mt-1">Your long-term goals and aspirations</p>
                    </div>
                </div>

                <!-- Content Container -->
                <div class="relative bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg border border-white/30 overflow-hidden group-hover:shadow-xl transition-all duration-300">
                    <div class="absolute inset-0 bg-gradient-to-br from-orange-50/30 to-yellow-50/30"></div>
                    <div class="relative p-6">
                        <partial name="_FutureVision" model="Model.FutureVisionItems" />
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Floating Action Button -->
    <div class="absolute bottom-6 right-6">
        <button class="w-14 h-14 bg-gradient-to-r from-primary to-secondary text-white rounded-full shadow-xl hover:shadow-2xl transform hover:scale-110 transition-all duration-300 flex items-center justify-center group">
            <svg class="w-6 h-6 group-hover:rotate-180 transition-transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
        </button>
    </div>
</div>

<style>
    /* Custom scrollbar styles */
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

    .scrollbar-default::-webkit-scrollbar {
        height: 6px;
    }

    .scrollbar-default::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 6px;
    }

    .scrollbar-default::-webkit-scrollbar-thumb {
        background: linear-gradient(to right, #6366f1, #8b5cf6);
        border-radius: 6px;
    }

        .scrollbar-default::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(to right, #4f46e5, #7c3aed);
        }

    /* Enhanced shadow utilities */
    .shadow-3xl {
        box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
    }

    /* Smooth animations */
    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-10px);
    }

    }

    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
</style>